<UserControl x:Class="WPFCourseWork.View.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCourseWork.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid   MaxWidth="300" Margin="100" >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button  Grid.Row="0" Margin="0 25 0 25" Content="Создать группу"  FontSize="20" FontWeight="Bold" MaxHeight="120" Command="{Binding Path=ToCreateGroupView}" />
        <Button Grid.Row="1"  Margin="0 25 0 25" Content="Вход в группу" FontSize="20" FontWeight="Bold"  MinWidth="50" MinHeight="30" MaxHeight="120" Command="{Binding Path=ToLoginGroupView}"/>
    </Grid>
</UserControl>
